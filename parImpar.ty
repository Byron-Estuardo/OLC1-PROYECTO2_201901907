void main () {
  int n = 129;
  if (par(n)){
    print("El numero es par");
  } else {
    print("El numero es impar");
  }
}

int par (int n){
  if (n == 0) {
    return 1;
  } else {
    return impar(n-1);
  }
}

int impar(int n) {
  if ( n == 0 ) {
    return 0;
  } else {
    return par(n-1);
  }
}

